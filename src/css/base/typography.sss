@custom-selector :--heading h1,h2,h3,h4,h5,h6

:root
  font-size: 10px

:--heading
  font-weight: 400

h2
  font-size: 2.4rem

h3
  font-size: 1.8rem

ul
  list-style: none
  & li
    font-size: 1.2rem

a
  text-decoration: none
  color: var(--grey-100)
  transition: all .3s ease-in-out
  &:hover,
  &:active,
  &:focus,
  &:focus-visible
    color: var(--primary)
