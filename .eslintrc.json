{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "ignore",
        "named": "always"
      }
    ],
    "func-names": [
      "error",
      "never"
    ],
    "import/extensions": [
      0,
      "never"
    ]
  }
}
