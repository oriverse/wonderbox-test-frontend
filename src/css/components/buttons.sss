.button
  padding: 1.4rem 2rem
  display: inline-block
  background-color: var(--white)
  border: 1px solid var(--primary)
  border-radius: 0.3rem
  font-size: 1.4rem
  font-weight: 500
  color: var(--primary)
  &:hover,
  &:focus,
  &:focus-visible
    background-color: var(--primary)
    color: var(--white)
